<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1A000000"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/data_text_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14.10.2021"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="28dp"/>
    
    <TextView
        android:id="@+id/time_text_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:00"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/data_text_rv"
        app:layout_constraintLeft_toLeftOf="@id/data_text_rv"/>
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sotilishi"
        app:layout_constraintTop_toTopOf="@id/data_text_rv"
        app:layout_constraintLeft_toRightOf="@id/data_text_rv"
        android:layout_marginLeft="37dp"/>
    <TextView
        android:id="@+id/rv_sold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 580 UZS"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/time_text_rv"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/t1"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olinishi"
        app:layout_constraintLeft_toRightOf="@id/t1"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/t1"
        android:layout_marginLeft="69dp"/>

    <TextView
        android:id="@+id/rv_sold_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 580 UZS"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/t2"
        app:layout_constraintTop_toTopOf="@id/time_text_rv"/>

</androidx.constraintlayout.widget.ConstraintLayout>